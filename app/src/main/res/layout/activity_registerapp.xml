<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/color_bg"
    android:layout_height="match_parent"
    tools:context=".RegisterappActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/id_user"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="ลงทะเบียนสมัครสมาชิก"
            android:textColor="#000000"
            android:textSize="25dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/opunmairegular">
        </TextView>

        <TextView
            android:id="@+id/FName"
            android:layout_below="@id/id_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ชื่อ         :"
            android:textSize="16dp"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/opunmairegular">
        </TextView>

        <EditText
            android:id="@+id/id_FName"
            android:layout_below="@id/id_user"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/FName"
            android:background="@drawable/round_white"
            android:inputType="text">
        </EditText>

        <TextView
            android:id="@+id/LName"
            android:layout_below="@id/FName"
            android:text="นามสกุล  :"
            android:textColor="#000000"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opunmairegular">
        </TextView>

        <EditText
            android:id="@+id/id_LName"
            android:layout_below="@id/id_FName"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/round_white"
            android:layout_toRightOf="@id/LName">
        </EditText>

        <TextView
            android:id="@+id/Email"
            android:layout_below="@id/LName"
            android:text="อีเมล์       :"
            android:textColor="#000000"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opunmairegular">
        </TextView>

        <EditText
            android:id="@+id/id_email"
            android:layout_below="@id/id_LName"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/round_white"
            android:layout_toRightOf="@id/Email">
        </EditText>

        <TextView
            android:id="@+id/password"
            android:layout_below="@id/Email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="20dp"
            android:textColor="#000000"
            android:text="พาวเวิร์ค :"
            android:textSize="15sp"
            android:fontFamily="@font/opunmairegular">
        </TextView>

        <EditText
            android:id="@+id/id_password"
            android:layout_below="@id/id_email"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:background="@drawable/round_white"
            android:layout_toRightOf="@id/password"
            android:inputType="text"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="10dp"
            android:textSize="15sp">
        </EditText>

        <TextView
            android:id="@+id/Gender"
            android:layout_below="@id/password"
            android:text="เพศ         : "
            android:textColor="#000000"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opunmairegular">
        </TextView>

        <RadioGroup
            android:id="@+id/rd_gender"
            android:layout_width="wrap_content"
            android:layout_below="@id/id_password"
            android:layout_toRightOf="@id/Gender"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal" >
            <RadioButton
                android:id="@+id/male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ชาย"
                android:textSize="15sp"
                android:fontFamily="@font/opunmairegular" />
            <RadioButton
                android:id="@+id/female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="หญิง"
                android:textSize="15sp"
                android:fontFamily="@font/opunmairegular" />
        </RadioGroup>

        <TextView
            android:id="@+id/bd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_below="@id/Gender"
            android:layout_marginLeft="20dp"
            android:text="วันเกิด     : "
            android:textColor="#000000"
            android:textSize="15sp"
            android:fontFamily="@font/opunmairegular"/>

        <TextView
            android:id="@+id/text_date"
            android:layout_below="@id/rd_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="23dp"
            android:layout_toRightOf="@+id/bd"
            android:text="dd / mm / yyyy"
            android:textSize="15sp" />

        <Button
            android:id="@+id/bt_date"
            android:layout_below="@id/rd_gender"
            android:layout_marginTop="5dp"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@+id/text_date"
            android:layout_marginLeft="40dp"
            android:background="@drawable/round_blue"
            android:text="Select Date" />

        <TextView
            android:id="@+id/type"
            android:layout_below="@id/bd"
            android:text="ประเภท    : "
            android:textColor="#000000"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opunmairegular">
        </TextView>

        <RadioGroup
            android:id="@+id/rd_type"
            android:layout_width="wrap_content"
            android:layout_below="@id/bt_date"
            android:layout_toRightOf="@id/Gender"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal" >
            <RadioButton
                android:id="@+id/runner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="นักวิ่ง"
                android:textSize="15sp"
                android:fontFamily="@font/opunmairegular"/>
            <RadioButton
                android:id="@+id/manager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="ผู้จัดกิจกรรม"
                android:textSize="15sp"
                android:fontFamily="@font/opunmairegular"/>
        </RadioGroup>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rd_type"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp">
            <Button
                android:id="@+id/btn_register"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="ลงทะเบียน"
                android:background="@drawable/round_green"
                android:fontFamily="@font/opunmairegular"/>
            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:background="@drawable/round_red"
                android:text="ยกเลิก"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/btn_register"
                android:fontFamily="@font/opunmairegular"/>
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".RegEventActivity">

        <RelativeLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="โปรดกรอกรายละเอียดการสมัครวิ่ง"
                    android:textSize="20dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:fontFamily="@font/opunmairegular">
                </TextView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/nameuser"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/title"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp">
                <TextView
                    android:id="@+id/text_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ชื่อ-นามสกุล       : "
                    android:textSize="16dp"
                    android:textColor="#000000"
                    android:fontFamily="@font/opunmairegular">
                </TextView>
                <EditText
                    android:id="@+id/edt_name"
                    android:layout_width="230dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/text_name"
                    android:background="@drawable/round_white">
                </EditText>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/nameuser"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp">
            <TextView
                android:id="@+id/text_tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="เบอร์โทรศัพท์     : "
                android:textSize="16dp"
                android:textColor="#000000"
                android:fontFamily="@font/opunmairegular">
            </TextView>
            <EditText
                android:id="@+id/edt_tel"
                android:layout_width="230dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/text_tel"
                android:background="@drawable/round_white">
            </EditText>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/idcard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tel"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp">
            <TextView
                android:id="@+id/text_idcard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="เลขบัตรประชาชน : "
                android:textSize="16dp"
                android:textColor="#000000"
                android:fontFamily="@font/opunmairegular">
            </TextView>
            <EditText
                android:id="@+id/edt_idcard"
                android:layout_width="230dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/text_idcard"
                android:background="@drawable/round_white">
            </EditText>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/nationality"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/idcard"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp">
            <TextView
                android:id="@+id/text_nationality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="สัญชาติ               : "
                android:textSize="16dp"
                android:textColor="#000000"
                android:fontFamily="@font/opunmairegular">
            </TextView>
            <EditText
                android:id="@+id/edt_nationality"
                android:layout_width="230dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/text_nationality"
                android:background="@drawable/round_white">
            </EditText>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/blood"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/nationality"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp">
            <TextView
                android:id="@+id/text_blood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="กรุ๊ปเลือด            : "
                android:textSize="16dp"
                android:textColor="#000000"
                android:fontFamily="@font/opunmairegular">
            </TextView>
            <Spinner
                android:id="@+id/edt_blood"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:entries="@array/blood"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/text_blood">
            </Spinner>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/distance"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/blood"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp">
            <TextView
                android:id="@+id/text_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ระยะทาง             : "
                android:textSize="16dp"
                android:textColor="#000000"
                android:fontFamily="@font/opunmairegular">
            </TextView>
            <Spinner
                android:id="@+id/edt_distance"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:entries="@array/distance"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/text_distance">
            </Spinner>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/emergency"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/distance"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp">
            <TextView
                android:id="@+id/text_emergency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="บุคคลติดต่อยามฉุกเฉิน : "
                android:textSize="16dp"
                android:textColor="#000000"
                android:fontFamily="@font/opunmairegular">
            </TextView>
            <EditText
                android:id="@+id/edt_emergency"
                android:layout_width="240dp"
                android:layout_height="30dp"
                android:layout_below="@+id/text_emergency"
                android:layout_marginLeft="2dp"
                android:background="@drawable/round_white">
            </EditText>
            <Spinner
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_emergency"
                android:layout_toRightOf="@+id/edt_emergency"
                android:layout_marginLeft="5dp"
                android:entries="@array/Relation">
            </Spinner>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relationTel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/emergency"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp">
            <TextView
                android:id="@+id/text_relationTel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="เบอร์ติดต่อ          : "
                android:textSize="16dp"
                android:textColor="#000000"
                android:fontFamily="@font/opunmairegular">
            </TextView>
            <EditText
                android:id="@+id/edt_relationTel"
                android:layout_width="230dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/text_relationTel"
                android:background="@drawable/round_white">
            </EditText>
        </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/relationTel">
        <Button
            android:id="@+id/btn_reg_event"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/round_green"
            android:onClick="btn_reg_event"
            android:text="ลงทะเบียน"
            android:textSize="20sp" />
        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/btn_reg_event"
            android:background="@drawable/round_red"
            android:onClick="cancel"
            android:text="ยกเลิก"
            android:textSize="20sp" />
    </RelativeLayout>

    </RelativeLayout>

</ScrollView>